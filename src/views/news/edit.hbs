 <div id="header">
    {{>header}}
</div>
<div class="mt-4 container">
    <h3>Cập nhật tin tức</h3>

    <form class="mt-4" method="POST" action="/news/{{new._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên tin tức</label>
            <input type="text" class="form-control" value="{{new.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{new.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{new.videoId}}" id="videoId" name="videoId">
        </div>      
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>